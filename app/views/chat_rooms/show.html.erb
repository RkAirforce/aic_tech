<table class="chat_room_wrapper col-md-5">
  <tr>
    <td>
      <h1>
        <% if @user.profile_picture.attached? %>
          <%= image_tag @user.profile_picture.variant(resize: "400x400"),
          class: "user_profile" %>
        <% else %>
          <%= image_tag "/default_user.png", class: "user_profile" %>
        <% end %>
        <%= @user.name %>
      </h1>
      <br />
      <%= link_to "マッチング一覧に戻る", :matched_relationships, class: "btn btn-info" %>
    </td>
  </tr>
  <tr>
    <td>
      <div id="messages" class="all_messages">
        <%= render @chat_room.messages %>
      </div>
    </td>
  </tr>
  <tr>
    <td class="text-align: center;">
      <%= render 'messages/new', {chat_room: @chat_room, user: @user} %>
    </td>
  </tr>
</table>
