<% @page_title = "ログイン" %>

<%= form_tag :session,
      class: "my-4 login_form shadow-lg col-xs-4 col-sm-5 col-md-4 col-lg-3" do %>
  <h2 class="py-3"><%= @page_title %></h2>

  <div class="py-2">
    <label>E-mail</label>
    <br>
    <i class="fa fa-envelope form-inline"></i>
    <input type="text" class="input-text" name="email">
  </div>
  <div class="py-2">
    <label>パスワード</label>
    <br>
    <i class="fa fa-unlock-alt "></i>
    <input class="input-text" type="password" name="password">
  </div>
  <div class="py-5">
    <input class="button" type="submit" value="ログイン">
  </div>
<% end %>
