<div class="droptool p-3 float-left"><span class="fa fa-bars menu-icon"></span></div>
<div class="logo p-2 float-left">AIC<i class="fa fa-venus-mars"></i>TECH</div>

<% if current_user %>
  <div class="name-display float-right m-3">
    <% if current_user.profile_picture.attached? %>
      <%= image_tag current_user.profile_picture.variant(resize: "400x400"),
            class: "mr-2", style: "object-fit: cover;" %>
    <% else %>
      <%= image_tag "/default_user.png", class: "mr-2", style: "object-fit: cover;" %>
    <% end %>
    <%= menu_link_to current_user.name, :account %>
  </div>
<% end %>

<nav class="menubar p-0 t-0 "style="font-family:'Orange Juice'">
  <div class="contents p-3 shadow">
    <div class="close-modal p-0 float-right">
      Close <i class="fa fa-2x fa-times"></i>
    </div>
    <ul class="menu-list pl-2 pt-5">
      <%= menu_link_to "TOP", :root %>
      <%= menu_link_to "News", :articles %>
      <% if current_user %>
        <%= menu_link_to "MyBlogs", :blogs %>
        <%= menu_link_to "Member", :users %>
        <%= menu_link_to "Logout", :session,
              method: :delete, data: { confirm: "ログアウトしますか？" } %>
        <%= menu_link_to "Matching", :followed_relationships %>
        <% if current_user.administrator? %>
          <%= menu_link_to "Administrator", :admins_root %>
        <% end %>
      <% end %>
      <% unless current_user %>
        <%= menu_link_to "Login", "/login" %>
        <%= menu_link_to "SignUp", new_user_path %>
      <% end %>
    </ul>
  </div>
</nav>
