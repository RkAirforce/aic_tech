<% if object.errors.any? %>
  <div class="error_explanation shadow col-sm-8 col-md-6 col-lg-4">
    <h4 class="py-2" style="text-align: center">登録エラー</h4>

    <ul class="p-3">
      <% object.errors.full_messages.each_with_index do |message, index| %>
        <li class="py-3">
          <i class="fa fa-exclamation-triangle" aria-hidden="true"></i> <%= message %>
        </li>
        <br>
      <% end %>
    </ul>
  </div>
<% end %>
