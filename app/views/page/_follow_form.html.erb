<th>いいかもを押す</th>
<td>
  <% unless current_user.following?(user) %>
  <%= form_for current_user.active_relationships.build, class: "like_form", remote: true do |f| %>
  <%= hidden_field_tag :followed_id, user.id %>
  <%= f.submit "いいかも！", id: "good_button", class: "btn btn-outline alert-danger" %>
  <% end %>
  <% else %>
  <%= form_for current_user.active_relationships.find_by(followed_id: user.id),
  html: { method: :delete }, remote: true do |f| %>
  <%= f.submit "いいかも済み！", class: "btn btn-outline alert-warning" %>
  <% end %>
  <% end %>
</td>
