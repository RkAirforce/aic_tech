<% @page_title = "ブログの編集" %>
<h2 class="pb-2"><%= @page_title %></h2>

<%= render "page/errors", object: @blog %>

<center class="py-2">
  <%= link_to "詳細", @blog %> |
  <%= link_to "ブログ一覧", blogs_path %>
</center>

<%= form_with(model: @blog, local: true, class: "blog-form shadow mb-4 col-sm-8 col-md-5 col-lg-5", multipart: true) do |form| %>
  <%= render "form", form: form  %>
  <div class="submit-actions py-5">
    <%= form.submit "更新", data: { disable_with: "処理中..." } %>
  </div>
<% end %>
